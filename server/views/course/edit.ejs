<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST" action="/courses/edit/<%=course._id%>">
                <div class="form-group">
                    <label for="nameTextField">Course Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the course title"
                    name="name" required
                    value="<%= course.name %>"
                    />
                </div>

                <div class="form-group">
                    <label for="codeTextField">Course Code</label>
                    <input type="text" class="form-control"
                    id="codeTextField"
                    placeholder="Enter the course code"
                    name="code" required
                    value="<%= course.code %>"
                    />
                </div>

                <div class="form-group">
                    <label for="lecture_per_week_TextField">Lecture hours per week</label>
                    <input type="text" class="form-control"
                    id="lecture_per_week_TextField"
                    placeholder="Enter lecture hours per week"
                    name="lecture_per_week" required
                    value="<%= course.lecture_per_week %>"
                    />
                </div>

                <div class="form-group">
                    <label for="lab_per_week_TextArea">Lab hours per week</label>
                    <input type="text" class="form-control"
                    id="lab_per_week_TextArea"
                    placeholder="Enter the lab hours per week"
                    name="lab_per_week"
                    value="<%= course.lab_per_week %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="availabilityTextField">Course Availability</label>
                    <input type="text" class="form-control"
                    id="availabilityTextField"
                    placeholder="Enter the Course Availability"
                    name="availability"
                    value="<%= course.availability %>"
                    required />
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter description"
                    name="description" 
                    required>
                    <%= course.description %>
                </textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/courses" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>